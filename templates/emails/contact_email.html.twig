{% apply inline_css %}
    <style>
        div.email-container {
            max-width: 700px;
            margin: auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0,0,0,0.1);
            border: 2px solid #005db5;
        }
        h1.email-header {
            color: #005db5;
            font-size: 28px;
            margin-bottom: 24px;
            text-align: center;
            border-bottom: 2px solid #005db5;
            padding-bottom: 10px;
        }
        p.email-text {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 24px;
            color: #333;
        }
        div.email-details {
            background-color: #f9f9f9;
            padding: 20px;
            margin-bottom: 24px;
            border-radius: 8px;
            border-left: 5px solid #005db5;
        }
        div.email-details p {
            margin: 12px 0;
        }
        p.expiration {
            font-size: 16px;
            color: #666;
        }
    </style>
    
    <div class="email-container">
        <h1 class="email-header">Nouveau message de contact</h1>
        <p class="email-text">Bonjour {{ username }},</p>    
        <p class="email-text">Vous avez reçu un nouveau message de contact avec les détails suivants :</p>
        <div class="email-details">
            <p><strong>Sujet :</strong> {{ subject }}</p>
            <p><strong>Email :</strong> {{ mail }}</p>
            <p><strong>Message :</strong></p>
            <p style="padding-left: 20px;">{{ message }}</p>
        </div>
        <p class="expiration">Ce message expirera à : {{ expiration_date|date('Y-m-d H:i:s') }}</p>
    </div>
{% endapply %}
