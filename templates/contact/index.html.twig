{% extends 'base.html.twig' %}

{% block title %}Contactez-Nous !
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/contact-form.css') }}">
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2 class="text-center text-primary mb-5">Nous sommes à votre écoute !</h2>
		<div class="row justify-content-center">
			<div class="col-md-8">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'contact-form bg-light p-5 rounded shadow'}}) }}

				<div class="my-custom-class-for-errors">
					{{ form_errors(form) }}
				</div>

				<!-- Objet -->
				<div class="form-group mb-4">
					<label class="fw-bold">Objet :</label>
					{{ form_widget(form.objet, {'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.objet) }}
				</div>

				<!-- Email -->
				<div class="form-group mb-4">
					<label class="fw-bold">Email :</label>
					{{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.email) }}
				</div>

				<!-- Message -->
				<div class="form-group mb-4">
					<label class="fw-bold">Message :</label>
					{{ form_widget(form.message, {'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.message) }}
				</div>

				<div class="form-group text-center mb-4">
					{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'} }) }}
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
