{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mt-5 register-page">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card custom-register-card no-hover-card">
					<div class="card-body">
						{% for flash_error in app.flashes('verify_email_error') %}
							<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
						{% endfor %}

						<h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>

						{{ form_errors(registrationForm, {'attr': {'class': 'form-error'}}) }}
						{{ form_start(registrationForm, {'attr': {'class': 'custom-form', 'novalidate': 'novalidate'}}) }}

						<div class="form-group">
							{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'custom-label'}}) }}
							{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control custom-input'}}) }}
							{{ form_errors(registrationForm.email, {'attr': {'class': 'form-error'}}) }}
						</div>

						<div class="form-group">
							{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'custom-label'}}) }}
							{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control custom-input'}}) }}
							{{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'form-error'}}) }}
						</div>

						<div class="form-row d-flex space-between">
							<div class="form-group col-md-6">
								{{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'custom-label'}}) }}
								{{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control custom-input'}}) }}
								{{ form_errors(registrationForm.nom, {'attr': {'class': 'form-error'}}) }}
							</div>

							<div class="form-group col-md-6">
								{{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'custom-label'}}) }}
								{{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control custom-input'}}) }}
								{{ form_errors(registrationForm.prenom, {'attr': {'class': 'form-error'}}) }}
							</div>
						</div>

						<div class="form-group">
							{{ form_label(registrationForm.adresse, null, {'label_attr': {'class': 'custom-label'}}) }}
							{{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control custom-input'}}) }}
							{{ form_errors(registrationForm.adresse, {'attr': {'class': 'form-error'}}) }}
						</div>

						<div class="form-row d-flex space-between">
							<div class="form-group col-md-6">
								{{ form_label(registrationForm.ville, null, {'label_attr': {'class': 'custom-label'}}) }}
								{{ form_widget(registrationForm.ville, {'attr': {'class': 'form-control custom-input'}}) }}
								{{ form_errors(registrationForm.ville, {'attr': {'class': 'form-error'}}) }}
							</div>

							<div class="form-group col-md-6">
								{{ form_label(registrationForm.cp, null, {'label_attr': {'class': 'custom-label'}}) }}
								{{ form_widget(registrationForm.cp, {'attr': {'class': 'form-control custom-input'}}) }}
								{{ form_errors(registrationForm.cp, {'attr': {'class': 'form-error'}}) }}
							</div>
						</div>

						<div class="form-group">
							{{ form_label(registrationForm.telephone, null, {'label_attr': {'class': 'custom-label'}}) }}
							{{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control custom-input'}}) }}
							{{ form_errors(registrationForm.telephone, {'attr': {'class': 'form-error'}}) }}
						</div>

						<div class="form-group form-check justify-content-center mt-2">
							{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input custom-checkbox'}}) }}
							{{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label custom-label'}}) }}
							{{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'form-error'}}) }}
						</div>

						<button type="submit" class="btn btn-lg btn-primary btn-block custom-button">Register</button>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
