{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="container mt-2">
        <div class="jumbotron text-center bg-primary text-white">
            <h1 class="display-4">Découvrez nos catégories</h1>
            <p class="lead">Sélectionnez une catégorie pour explorer les plats disponibles.</p>
        </div>

        <!-- Première pagination -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-12 text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {% if current_page == 1 %}disabled{% endif %}">
                            <a class="page-link" href="{{ path('categories_list', {'page': current_page - 1}) }}" tabindex="-1">Précédent</a>
                        </li>
                        {% for i in 1..total_pages %}
                            <li class="page-item {% if i == current_page %}active{% endif %}">
                                <a class="page-link" href="{{ path('categories_list', {'page': i}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        <li class="page-item {% if current_page == total_pages %}disabled{% endif %}">
                            <a class="page-link" href="{{ path('categories_list', {'page': current_page + 1}) }}">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <!-- Liste des catégories -->
        <div class="row">
            {% for categorie in categories %}
                <div class="col-md-4 mb-4">
                    <a href="{{ path('category_plats', {'id': categorie.id}) }}">
                        <div class="card category-card">
                            <img src="{{ asset('img/category/' ~ categorie.image) }}" class="card-img-top" alt="{{ categorie.libelle }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ categorie.libelle }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>

        <!-- Deuxième pagination -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-12 text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {% if current_page == 1 %}disabled{% endif %}">
                            <a class="page-link" href="{{ path('categories_list', {'page': current_page - 1}) }}" tabindex="-1">Précédent</a>
                        </li>
                        {% for i in 1..total_pages %}
                            <li class="page-item {% if i == current_page %}active{% endif %}">
                                <a class="page-link" href="{{ path('categories_list', {'page': i}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        <li class="page-item {% if current_page == total_pages %}disabled{% endif %}">
                            <a class="page-link" href="{{ path('categories_list', {'page': current_page + 1}) }}">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
